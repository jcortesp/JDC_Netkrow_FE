{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    // 1) primero las rewrites de la API:
    { "src": "/api/(.*)", "dest": "https://netkrow.onrender.com/api/$1" },
    // 2) luego servir tus archivos est√°ticos
    { "handle": "filesystem" },
    { "src": "/(.*)",     "dest": "/index.html" }
  ]
}
