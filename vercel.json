{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [

    { "src": "/api/(.*)", "dest": "https://netkrow.onrender.com/api/$1" },
   
    { "handle": "filesystem" },
    { "src": "/(.*)",     "dest": "/index.html" }
  ]
}
